#define _           &none          // no physical key
#define _________   &none          // no physical key
#define mmmmmmmmm   &none          // to assign press

#define EXTR        LC(X)
#define COPY        LC(C)
#define PASTE       LC(V)
#define ALL         LC(A)

#define APP1        LG(1)
#define APP2        LG(2)
#define APP3        LG(3)

#define UNDO        LC(Z)
#define REDO        LC(LS(Z))
#define SAVE        LC(S)

#define BACK        LC(LS(T))
#define WDRAW       LC(W)
#define TABN        LC(T)

#define TABL        LC(LS(TAB))
#define TABR        LC(TAB)

#define RFSH        LC(R)
#define DVTLS       LC(LS(I))
#define FIND        LC(F)

// 25 26 53

/ {
    keymap {
        compatible = "zmk,keymap";
        l0 { bindings = <
_________ _________ _________ _________ _________ _________             _ _ _ _ _ _
