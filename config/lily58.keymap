// ============================================================================
// KEYMAP
// ============================================================================

/ {
    keymap {
        compatible = "zmk,keymap";
        l0 { bindings = <
 _____ REDO  UNDO  _____ _____ _____             _ _ _ _ _ _
 ESC   _____ DEL   F14   SAVE  PSCRN             _ _ _ _ _ _
 LSHFT DOT   BSPC  SPACE ENTER SHENT             _ _ _ _ _ _
 _____ ALL   CUT   COPY  PASTE _____ _____ _ _ _ _ _ _ _
                               _____ MB2  MB1  MB3  _ _ _ _
         >; };
    };
};

