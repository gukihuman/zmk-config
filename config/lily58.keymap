/ {
    keymap {
        compatible = "zmk,keymap";
        l0 { bindings = <
_OL1 ____ mmmm mmmm ____ _F14           _PSR ____ mmmm mmmm ____ mmmm
_MO2 _COM _DOT _E   _J   _ATB           _K   _D   _S   _L   _P   _M
_Q   _A   _U   _O   _I   _Z             _F   _T   _R   _N   _C   _V
____ ____ _X   _BSP _Y   ____ _TBL _TBR ____ _G   _MNS _W   ____ ____
               ____ _ESC _SP  _ENT mmmm _H   _B   ____ 
        >; }; 
        ol1 { bindings = <
xxxx ____ mmmm mmmm ____ mmmm           mmmm ____ mmmm mmmm ____ mmmm
mmmm mmmm mmmm mmmm mmmm mmmm           mmmm _EQL _LBR _RBR _QMK mmmm
mmmm mmmm mmmm mmmm mmmm mmmm           mmmm _CL  _LPR _RPR mmmm mmmm
____ ____ mmmm mmmm mmmm ____ mmmm mmmm ____ mmmm _LBK _RBK ____ ____
____ ____ ____ ____ mmmm _UND mmmm _SQT _GRV _DQT ____ ____ ____ ____
        >; };
        mo2 { bindings = <
mmmm ____ mmmm mmmm ____ mmmm           mmmm ____ mmmm mmmm ____ mmmm
xxxx mmmm _ALL _COP _SAV _PSR           mmmm _N7  _N8  _N9  mmmm mmmm
mmmm mmmm mmmm _CUT _PST mmmm           mmmm _N4  _N5  _N6  mmmm mmmm
____ ____ mmmm mmmm mmmm ____ mmmm mmmm ____ _N1  _N2  _N3  ____ ____
____ ____ ____ ____ _MB2 _MB1 _MB3 mmmm _N0  mmmm ____ ____ ____ ____
        >; };
    };
    behaviors {
        ol: ol {
            compatible = "zmk,behavior-oneshot-layer";
            #binding-cells = <1>;
            release-after-ms = <800>;
        };
        glyph_start: glyph_start {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LT>, <&kp PIPE>;
        };
        glyph_end: glyph_end {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp PIPE>, <&kp GT>;
        };
        altb: alt_tab {
            compatible = "zmk,behavior-hold-tap";
            label = "Alt-Tab Key";
            #binding-cells = <2>;
            flavor = "tap-preferred";
            tapping-term-ms = <200>;
            bindings = <&alt_tab_hold>, <&alt_tab_tap>;
        };
    };
    macros {
        alt_tab_tap: alt_tab_tap {
            compatible = "zmk,behavior-macro";
            label = "Alt‑Tab Tap";
            #binding-cells = <0>;
            wait-ms = <0>;
            tap-ms = <20>;
            bindings = <&macro_press &kp LALT>, <&macro_tap &kp TAB>, <&macro_release &kp LALT>;
        };
        alt_tab_hold: alt_tab_hold {
            compatible = "zmk,behavior-macro";
            label = "Alt‑Tab Hold";
            #binding-cells = <0>;
            wait-ms = <0>;
            tap-ms = <20>;
            bindings = <&macro_press &kp LALT>, <&macro_tap &kp TAB>, <&macro_pause_for_release>, <&macro_release &kp LALT>;
        };
    };
};